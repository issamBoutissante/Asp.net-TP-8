<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        body {
            padding-top: 0;
            margin-top: 0;
        }

        header {
            display: flex;
            flex-direction: row;
            align-items: center;
            background-color: rgba(0, 0, 0, 0.603);
        }

         header a{
                margin-left: 20px;
                color: white;
         }
         header h3{
             color:white;
         }
         table{
             margin:auto;
         }
    </style>
</head>
<body>
    <header>
        <h3>Gestion Articles</h3>
        <a href="/Articles/Index">Articles</a>
        <a href="/Articles/AfficherQtt">Quantite Par Article</a>
        <a href="/Articles/CalculerMontant">Calculer Montant</a>
        <a href="/Articles/AfficherLeSeuil">Afficher Le Seuil</a>
    </header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>